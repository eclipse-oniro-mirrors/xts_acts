{
    "description": "Config for avcodec ndk test cases",
    "driver": {
      "module-name": "ActsHevcHdrcodecTest",
      "native-test-timeout": "300000",
      "native-test-device-path": "/data/local/tmp",
      "runtime-hint": "1s",
      "type": "CppTest"
    },
    "kits": [
        {
            "type": "PushKit",
            "pre-push" : [
                "mount -o rw,remount /",
                "mkdir -p /data/test/media",
                "mkdir -p /data/local/tmp/"
            ],
            "push": [
              "ActsHevcHdrcodecTest->/data/local/tmp/ActsHevcHdrcodecTest",
              "./resource/media/codec/video_decoder/. ->/data/test/media/"
            ]
        },
        {
            "type": "ShellKit",
            "run-command": [
                "hilog -Q pidoff",
                "restorecon /data/test/media",
                "chmod 777 -R /data/local/tmp"
            ]
        }
    ]
}
{
    "description": "Configuration for hjunit Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "600000",
        "bundle-name": "com.acts.ability.specifiedability",
        "module-name": "entry",
        "shell-timeout": "30000",
        "testcase-timeout": 60000
    },
    "kits": [
        {
            "test-file-name": [
                "ActsSpecifiedAbilityRely1.hap",
                "ActsSpecifiedAbilityRely2.hap",
                "ActsSpecifiedAbilityRely3.hap",
                "ActsSpecifiedAbilityTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "param set persist.sys.abilityms.support.ecologicalrulemgrservice false"
            ],
            "teardown-command": [
                "param set persist.sys.abilityms.support.ecologicalrulemgrservice true"
          ]
        },
        {
            "type": "ShellKit",
            "run-command": [
                "power-shell wakeup",
                "uinput -T -m 300 1279 280 200",
                "uinput -T -d 300 600 -m 300 600 300 100 -u 300 100",
                "power-shell timeout -o 86400000",
                "power-shell setmode 602"
            ]
        }
    ]
}
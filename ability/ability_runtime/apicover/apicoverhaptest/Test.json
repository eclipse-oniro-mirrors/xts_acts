{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "180000",
        "bundle-name": "com.example.apicoverhaptest",
        "module-name": "entry_test",
        "shell-timeout": "300000",
        "testcase-timeout": 20000
    },
    "kits": [
        {
            "test-file-name": [
                "ActsApiCoverhapTest.hap",
                "ActsApiCoverhapMain.hap",
                "FaSupplement.hap",
                "StageSupplement.hap",
                "FormModule.hap",
                "ActsFACoverTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },{
          "type": "ShellKit",
          "run-command": [
              "uitest dumpLayout",
              "power-shell wakeup",
              "uinput -T -m 300 1279 280 200",
              "uinput -T -d 300 600 -m 300 600 300 100 -u 300 100",
              "power-shell timeout -o 86400000",
              "power-shell setmode 602",
              "param set persist.sys.abilityms.support.ecologicalrulemgrservice false"
          ],
          "teardown-command": [
              "param set persist.sys.abilityms.support.ecologicalrulemgrservice true"
          ]
      }
    ]
}
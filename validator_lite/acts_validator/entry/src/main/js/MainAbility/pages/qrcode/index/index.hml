<div class="container">
    <div class="content-title">
        <text style="width:60%;height:50px;text-align: center;">qrcode</text>
        <input type="button" value="?" class="backBtnHelp" onclick="help" />
    </div>

    <qrcode onclick="clickAction" onswipe="swipeAction" style="width: 200px; height: 200px; color: {{qrColor}}; background-color: {{qrBackgroundColor}};" value="{{qrValue}}">
    </qrcode>

    <div class="container-div">
        <text style="width:60px;height:50px;text-align: left;">修改</text>
        <input onclick="changeValue" class="container-bt" value="值"></input>
        <input onclick="changeColor" class="container-bt" value="颜色"></input>
        <input onclick="changeBackgroundColor" class="container-bt" value="背景色"></input>
    </div>

    <div class="bottom-bt">
        <input type="button" value="pass" class="button" onclick="changeResult(pass)" />
        <input type="button" value="fail" class="button" onclick="changeResult(fail)" />
        <input type="button" value="返回" class="button" onclick="back" />
    </div>
</div>


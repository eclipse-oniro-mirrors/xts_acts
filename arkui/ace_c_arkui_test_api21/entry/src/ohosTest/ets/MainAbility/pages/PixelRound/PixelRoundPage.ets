import nativeNode from 'libnativerender.so'
import { NodeContent } from '@kit.ArkUI';

@Entry
@Component
struct PixelRoundPage {
  // 初始化NodeContent对象。
  private rootSlot = new NodeContent();
  @State content: string = '';

  aboutToAppear(): void {
    nativeNode.createPixelRoundNativeRoot(this.rootSlot, 'PixelRound')
  }

  build() {
    Column({space:5}) {
      Row() {
        Button('Set').onClick(() => {
          nativeNode.setPixelRound()
        }).key('PixelRoundPage_SetPixelRound_Btn').controlSize(ControlSize.SMALL)
        Button('Get').onClick(() => {
          this.content = nativeNode.getPixelRound()
        }).key('PixelRoundPage_GetPixelRound_Btn').controlSize(ControlSize.SMALL)
      }

      Text(this.content).key('PixelRoundPage_PixelRound_content').height('10%').clip(true)

      Row() {
        ContentSlot(this.rootSlot)
      }
      .layoutWeight(1)
      .padding(10)
    }
    .width('100%')
    .height('100%')
  }
}

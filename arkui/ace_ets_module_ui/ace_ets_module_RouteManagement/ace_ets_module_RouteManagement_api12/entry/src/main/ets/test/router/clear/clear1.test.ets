import router from '@ohos.router';
import { describe, beforeAll, beforeEach, afterEach, afterAll, it, expect } from "@ohos/hypium"
import CommonFunc from '../../../MainAbility/utils/Common';
import { Driver, ON } from '@ohos.UiTest';


export default function clear1() {
  describe('clear1', () => {
    beforeEach(async (done: Function) => {
      console.info("clear1 beforeEach start");
      let options: router.RouterOptions = {
        url: 'MainAbility/pages/router/clear/clear1',
      }
      try {
        router.clear();
        let pages = router.getState();
        console.info("get clear1 state success " + JSON.stringify(pages));
        if (!("clear1" == pages.name)) {
          console.info("get clear1 state success " + JSON.stringify(pages.name));
          let result = await router.pushUrl(options);
          await CommonFunc.sleep(2000);
          console.info("push clear1 page success " + JSON.stringify(result));
        }
      } catch (err) {
        console.error("push clear1 page error: " + err);
      }
      done()
    });

    afterEach(async () => {
      await CommonFunc.sleep(1000);
      console.info("clear1 after each called");
    });

    /**
     * @tc.number    clear1_0100
     * @tc.name      clear1_0100
     * @tc.desc      Test clear
     * @tc.level     Level 2
     */
    it('clear1_0100', 0, async (done: Function) => {
      console.info('[clear1_0100] START');
      await CommonFunc.sleep(1000);

      let driver = Driver.create();
      await CommonFunc.sleep(1000);

      let btn = await driver.findComponent(ON.id('clear1_get'));
      await btn.click()
      await CommonFunc.sleep(1000);
      console.info('[clear1_0100] btn click');

      let strJson = getInspectorByKey('clear1_text2');
      await CommonFunc.sleep(1000);
      console.info("[clear1_0100] component obj is: " + JSON.stringify(JSON.parse(strJson)));
      expect(JSON.parse(strJson).$attrs.content).assertEqual('size2');

      let btn2 = await driver.findComponent(ON.id('clear1_btn'));
      await btn2.click()
      await CommonFunc.sleep(1000);
      console.info('[clear1_0100] btn2 click');

      await btn.click()
      await CommonFunc.sleep(1000);
      console.info('[clear1_0100] btn click2');

      let strJson2 = getInspectorByKey('clear1_text2');
      await CommonFunc.sleep(1000);
      console.info("[clear1_0100] component obj is: " + JSON.stringify(JSON.parse(strJson2)));
      expect(JSON.parse(strJson2).$attrs.content).assertEqual('size1');

      await btn2.click()
      await CommonFunc.sleep(1000);
      console.info('[clear1_0100] btn2 click2');

      await btn.click()
      await CommonFunc.sleep(1000);
      console.info('[clear1_0100] btn click3');

      let strJson3 = getInspectorByKey('clear1_text2');
      await CommonFunc.sleep(1000);
      console.info("[clear1_0100] component obj is: " + JSON.stringify(JSON.parse(strJson3)));
      expect(JSON.parse(strJson3).$attrs.content).assertEqual('size1');

      console.info('[clear1_0100] END');
      done();
    });
  })
}


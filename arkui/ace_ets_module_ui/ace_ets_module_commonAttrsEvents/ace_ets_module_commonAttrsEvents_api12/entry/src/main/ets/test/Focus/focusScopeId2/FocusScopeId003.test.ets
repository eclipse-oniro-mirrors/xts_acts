import router from '@ohos.router';
import { describe, beforeAll, beforeEach, afterEach, afterAll, it, expect } from "@ohos/hypium"
import CommonFunc from '../../../MainAbility/common/Common';
import { Driver, ON } from '@ohos.UiTest';


export default function FocusScopeId003() {
  describe('FocusScopeId003', () => {
    beforeEach(async (done: Function) => {
      console.info("FocusScopeId003 beforeEach start");
      let options: router.RouterOptions = {
        url: 'MainAbility/pages/Focus/focusScopeId2/FocusScopeId003',
      }
      try {
        router.clear();
        let pages = router.getState();
        console.info("get FocusScopeId003 state success " + JSON.stringify(pages));
        if (!("FocusScopeId003" == pages.name)) {
          console.info("get FocusScopeId003 state success " + JSON.stringify(pages.name));
          let result = await router.pushUrl(options);
          await CommonFunc.sleep(2000);
          console.info("push FocusScopeId003 page success " + JSON.stringify(result));
        }
      } catch (err) {
        console.error("push FocusScopeId003 page error: " + err);
      }
      done()
    });

    afterEach(async () => {
      await CommonFunc.sleep(1000);
      console.info("FocusScopeId003 after each called");
    });

    /**
     * @tc.number    FocusScopeId003_0100
     * @tc.name      FocusScopeId003_0100
     * @tc.desc      Test focusScopeId
     * @tc.level     Level 2
     */
    it('FocusScopeId003_0100', 0, async (done: Function) => {
      console.info('[FocusScopeId003_0100] START');
      await CommonFunc.sleep(1000);

      let driver = Driver.create();
      await CommonFunc.sleep(1000);

      let btn2_4 = await driver.findComponent(ON.id('FocusScopeId003_btn2_4'));
      await btn2_4.click()
      await CommonFunc.sleep(1000);
      console.info('[FocusScopeId003_0100] btn2_4 click');

      await driver.triggerKey(2049);
      await CommonFunc.sleep(1000);

      await driver.triggerKey(2049);
      await CommonFunc.sleep(1000);

      await driver.triggerKey(2049);
      await CommonFunc.sleep(1000);

      await driver.triggerKey(2049);
      await CommonFunc.sleep(1000);

      let btn2_4_isFocusedValue = await btn2_4.isFocused()
      expect(btn2_4_isFocusedValue).assertEqual(true);
      console.info('[FocusScopeId003_0100] btn2_4 isFocused');

      let clearFocus = await driver.findComponent(ON.id('FocusScopeId003_clearFocus'));
      await clearFocus.click()
      await CommonFunc.sleep(1000);
      console.info('[FocusScopeId003_0100] clearFocus click');

      console.info('[FocusScopeId003_0100] END');
      done();
    });
  })
}


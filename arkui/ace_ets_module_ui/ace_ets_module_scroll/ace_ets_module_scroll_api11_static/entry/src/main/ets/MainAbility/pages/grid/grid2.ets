import {
  Entry,
  Component,
  Column,
  ColumnOptions,
  Grid,
  Text,
  ForEach,
  GridDirection,
  Margin,
  GridItem,
  TextAlign
} from '@ohos.arkui.component'
import { State } from '@ohos.arkui.stateManagement';

@Entry
@Component
struct GridExample {
  @State Number1: String[] = ['0', '1', '2', '3', '4'];

  build() {
    Column({ space: 5 } as ColumnOptions) {
      Grid() {
        ForEach(this.Number1, (day: string) => {
          ForEach(this.Number1, (day: string) => {
            GridItem() {
              Text(day)
                .fontSize(16)
                .backgroundColor(0xF9CF93)
                .width('100%')
                .height('100%')
                .textAlign(TextAlign.Center)
            }
          }, (day: string) => day)
        }, (day: string) => day)
      }
      .columnsTemplate('1fr 1fr 1fr 1fr 1fr')
      .rowsTemplate('1fr 1fr 1fr 1fr 1fr')
      .columnsGap(10)
      .rowsGap(10)
      .width('90%')
      .backgroundColor(0xFAEEE0)
      .height(300)
      .multiSelectable(false)
      .layoutDirection(GridDirection.Row)
      .minCount(1)
      .cellLength(0)
      .supportAnimation(true)

      Grid() {
        ForEach(this.Number1, (day: string) => {
          ForEach(this.Number1, (day: string) => {
            GridItem() {
              Text(day)
                .fontSize(16)
                .backgroundColor(0xF9CF93)
                .width('100%')
                .height('100%')
                .textAlign(TextAlign.Center)
            }
          }, (day: string) => day)
        }, (day: string) => day)
      }
      .columnsTemplate('1fr 1fr 1fr 1fr 1fr')
      .rowsTemplate('1fr 1fr 1fr 1fr 1fr')
      .columnsGap(10)
      .rowsGap(10)
      .width('90%')
      .backgroundColor(0xFAEEE0)
      .height(300)
      .layoutDirection(GridDirection.ColumnReverse)

      Grid() {
        ForEach(this.Number1, (day: string) => {
          ForEach(this.Number1, (day: string) => {
            GridItem() {
              Text(day)
                .fontSize(16)
                .backgroundColor(0xF9CF93)
                .width('100%')
                .height('100%')
                .textAlign(TextAlign.Center)
            }
          }, (day: string) => day)
        }, (day: string) => day)
      }
      .columnsTemplate('1fr 1fr 1fr 1fr 1fr')
      .rowsTemplate('1fr 1fr 1fr 1fr 1fr')
      .columnsGap(10)
      .rowsGap(10)
      .width('90%')
      .backgroundColor(0xFAEEE0)
      .height(300)
      .layoutDirection(GridDirection.Column)

      Text('scroll')
        .fontColor(0xCCCCCC)
        .fontSize(9)
        .width('90%')
      Grid() {
        ForEach(this.Number1, (day: string) => {
          ForEach(this.Number1, (day: string) => {
            GridItem() {
              Text(day)
                .fontSize(16)
                .backgroundColor(0xF9CF93)
                .width('100%')
                .height(80)
                .textAlign(TextAlign.Center)
            }
          }, (day: string) => day)
        }, (day: string) => day)
      }
      .columnsTemplate('1fr 1fr 1fr 1fr 1fr')
      .columnsGap(10)
      .rowsGap(10)
      .onScrollIndex((first: int): void => {
        console.info(first.toString())
      })
      .width('90%')
      .backgroundColor(0xFAEEE0)
      .height(300)
    }.width('100%')
    .margin({ top: 5 } as Margin)
  }
}
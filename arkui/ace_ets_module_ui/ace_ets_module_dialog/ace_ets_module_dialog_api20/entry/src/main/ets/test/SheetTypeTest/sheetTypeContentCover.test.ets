import { describe, beforeAll, beforeEach, afterEach, afterAll, it, expect, Level, Size, TestType } from '@ohos/hypium'
import router from '@ohos.router';
import { Driver, ON} from '@ohos.UiTest';
import CommonFunc from '../../MainAbility/common/Common';

export default function sheetTypeContentCoverTest() {
  describe('sheetTypeContentCoverTest', () => {
    beforeEach(async (done: Function) => {
      console.info('sheetTypeContentCoverTest beforeEach start');
      let options: router.RouterOptions = {
        url: 'MainAbility/pages/SheetType/sheetTypeContentCover',
      }
      try {
        router.clear();
        let pages = router.getState();
        console.info('get sheetTypeContentCoverTest state pages: ' + JSON.stringify(pages));
        if (!('sheetTypeContentCoverTest' == pages.name)) {
          console.info('get sheetTypeContentCoverTest pages.name: ' + JSON.stringify(pages.name));
          let result = await router.pushUrl(options);
          await CommonFunc.sleep(5000);
          console.info("push sheetTypeContentCoverTest success: " + JSON.stringify(result));
        }
      } catch (err) {
        console.error('push sheetTypeContentCoverTest page error: ' + err);
      }
      done()
    });

    /* *
    * @tc.number: sheetTypeContentCoverTest_001
    * @tc.name  : sheetTypeContentCoverTest_001
    * @tc.desc  : Test the sheetTypeContentCoverTest_001 not null
    * @tc.level : Level 1
    */
     it('sheetTypeContentCoverTest_001', TestType.Function | Size.MEDIUMTEST | Level.LEVEL1, async (done: Function) => {
      console.info('sheetTypeContentCoverTest_001 START');
      let driver = await Driver.create()
      await CommonFunc.sleep(1000);
      let button = await driver.findComponent(ON.id('sheetTypeContentCover'));
      await button.click();
      await CommonFunc.sleep(1000);

      let button1 = await driver.findComponent(ON.id('close'));
      await button1.click();
      await CommonFunc.sleep(1000);

      let strJson1 = getInspectorByKey('text1');
      expect(JSON.parse(strJson1).$attrs.content).assertEqual('4');
      await CommonFunc.sleep(1000);
      
      console.info('sheetTypeContentCoverTest_001 END');
      done();
    });
  })
}
import router from '@ohos.router';
import { describe, beforeEach, afterEach, it, expect, TestType, Size, Level } from "@ohos/hypium"
import { Component, Driver, ON } from '@ohos.UiTest';
import CommonFunc from '../../MainAbility/common/Common'


export default function DatePickerCanLoopTest() {
  describe('DatePickerCanLoopTest', () => {
    beforeEach(async (done: Function) => {
      console.info('DatePickerCanLoopTest beforeEach start');
      let options: router.RouterOptions = {
        url: 'MainAbility/pages/datePicker/datePickerCanLoop',
      }
      try {
        router.clear();
        let pages = router.getState();
        console.info('get DatePickerCanLoopTest state pages:' + JSON.stringify(pages));
        if (!('datePickerCanLoop' === pages.name)) {
          console.info('get DatePickerCanLoopTest pages.name:' + JSON.stringify(pages.name));
          let result = await router.pushUrl(options);
          await CommonFunc.sleep(2500);
          console.info('push DatePickerCanLoopTest page result:' + JSON.stringify(result));
        }
      } catch (err) {
        console.error('push DatePickerCanLoopTest page error:' + err);
      }
      console.info('DatePickerCanLoopTest beforeEach end');
      done();
    });

    /**
     * @tc.number: DatePickerCanLoopTest_0100
     * @tc.name  : DatePickerCanLoopTest_0100
     * @tc.desc  : To test the canLoop true 
     * @tc.level : Level 0
     * @tc.type
     * @tc.size
     */
    it('DatePickerCanLoopTest_0100', TestType.FUNCTION | Size.MEDIUMTEST | Level.LEVEL0, async (done: Function) => {
      console.info('DatePickerCanLoopTest_0100 START');
      let driver: Driver = Driver.create();
      await CommonFunc.sleep(1000);
      let button: Component = await driver.findComponent(ON.id('trueID'));
      await CommonFunc.sleep(1000);
      await button.click()
      await CommonFunc.sleep(1000);

      let strJson = getInspectorByKey('datePicker');
      let obj: ESObject = JSON.parse(strJson);
      console.info('DatePickerCanLoopTest_0100 true component obj is: ' + obj.$attrs.canLoop);
      expect(obj.$attrs.canLoop).assertEqual('true');
      done();
    });

    /**
     * @tc.number: DatePickerCanLoopTest_0200
     * @tc.name  : DatePickerCanLoopTest_0200
     * @tc.desc  : To test the canLoop false 
     * @tc.level : Level 0
     * @tc.type
     * @tc.size
     */

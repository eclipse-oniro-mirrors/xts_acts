      await button.click()
      await CommonFunc.sleep(1000);

      let strJson = getInspectorByKey('datePicker');
      let obj: ESObject = JSON.parse(strJson);
      console.info('DatePickerCanLoopTest_0200 false component obj is: ' + obj.$attrs.canLoop);
      expect(obj.$attrs.canLoop).assertEqual('false');
      done();
    });

    /**
     * @tc.number: DatePickerCanLoopTest_0300
     * @tc.name  : DatePickerCanLoopTest_0300
     * @tc.desc  : To test the canLoop null 
     * @tc.level : Level 0
     * @tc.type
     * @tc.size
     */
    it('DatePickerCanLoopTest_0300', TestType.FUNCTION | Size.MEDIUMTEST | Level.LEVEL0, async (done: Function) => {
      console.info('DatePickerCanLoopTest_0300 START');
      let driver: Driver = Driver.create();
      await CommonFunc.sleep(1000);
      let button: Component = await driver.findComponent(ON.id('nullID'));
      await CommonFunc.sleep(1000);
      await button.click()
      await CommonFunc.sleep(1000);

      let strJson = getInspectorByKey('datePicker');
      let obj: ESObject = JSON.parse(strJson);
      console.info('DatePickerCanLoopTest_0300 null component obj is: ' + obj.$attrs.canLoop);
      expect(obj.$attrs.canLoop).assertEqual('true');
      done();
    });

    /**
     * @tc.number: DatePickerCanLoopTest_0400
     * @tc.name  : DatePickerCanLoopTest_0400
     * @tc.desc  : To test the canLoop undefined 
     * @tc.level : Level 0
     * @tc.type
     * @tc.size
     */
    it('DatePickerCanLoopTest_0400', TestType.FUNCTION | Size.MEDIUMTEST | Level.LEVEL0, async (done: Function) => {
      console.info('DatePickerCanLoopTest_0400 START');
      let driver: Driver = Driver.create();
      await CommonFunc.sleep(1000);
      let button: Component = await driver.findComponent(ON.id('undefinedID'));
      await CommonFunc.sleep(1000);
      await button.click()
      await CommonFunc.sleep(1000);

      let strJson = getInspectorByKey('datePicker');
      let obj: ESObject = JSON.parse(strJson);
      console.info('DatePickerCanLoopTest_0400 undefined component obj is: ' + obj.$attrs.canLoop);
      expect(obj.$attrs.canLoop).assertEqual('true');
      done();
    });
  })
}
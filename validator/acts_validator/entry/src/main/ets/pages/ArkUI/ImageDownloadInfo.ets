import { cacheDownload } from '@kit.BasicServicesKit'
import router from '@ohos.router';
import promptAction from '@ohos.promptAction';
import Logger from '../model/Logger';
import fs from '@ohos.file.fs';
import FirstDialog from '../model/FirstDialog';
import prompt from '@ohos.promptAction'
import { BusinessError } from '@ohos.base';

const TAG = '[ImageDownloadInfo]';

@Entry
@Component
struct imageDownloadInfo {
@State index: number = 0
  @State srcArray: (string)[] = [
    "https://app img.dbankcdn.com/substancechartimg/64/f7e291e71006440caed2f552f4dbb522.jpg", // 故意错误
  ]
  @State errInfo: string = ''
  @State name: string = 'ImageDownloadInfo';
  @State StepTips: string = '操作步骤：进入当前页面等待16秒(时间不固定，依赖网络)后，页面顶部会出现打印信息' + '\n' + '预期结果：打印信息中有dnsServers等关键字';
  @State Vue: boolean = false;

  @Builder
  PassBtn(text: Resource, isFullScreen: boolean) {
    if (this.Vue == false) {
      Button({ stateEffect: this.Vue }) {
        Image($r('app.media.ic_public_pass'))
          .width('20vp')
          .height('20vp')
      }
      .margin({ bottom: '20vp' })
      .width('30%')
      .height('30vp')
      .backgroundColor(Color.Grey)
      .opacity(0.4)
      .onClick(() => {

      })
    }
    else {
      Button({ stateEffect: this.Vue }) {
        Image($r('app.media.ic_public_pass'))
          .width('20vp')
          .height('20vp')
      }
      .margin({ bottom: '20vp' })
      .width('30%')
      .height('30vp')
      .backgroundColor(Color.Grey)
      .onClick(() => {
        router.back({
          url: 'pages/ArkUI/ArkUI_index',
          params: {
            result: 'true ', title: this.name,
          }
        })
        promptAction.showToast({
          message: '通过', duration: 1000
        });
      })
    }
  }

  @Builder
  FailBtn(text: Resource, isFullScreen: boolean) {
    Button() {
      Image($r('app.media.ic_public_fail'))
        .width('20vp')
        .height('20vp')
    }
    .margin({ bottom: '20vp' })
    .width('30%')
    .height('30vp')
    .backgroundColor(Color.Grey)
    .onClick(() => {
      router.back({
        url: 'pages/ArkUI/ArkUI_index',
        params: {
          result: 'false', title: this.name,
        }
      })
      promptAction.showToast({
        message: '失败', duration: 1000
      });
    })
  }

  aboutToAppear() {
    FirstDialog.ChooseDialog(this.StepTips, this.name);
    cacheDownload.setDownloadInfoListSize(10)
  }

  build() {
    Column() {
      Row() {
        Button() {
          Image($r('app.media.ic_public_back'))
            .width('20vp')
            .height('18vp')
            .margin({ left: '20vp' })
        }
        .backgroundColor(Color.Black)
        .size({ width: '40vp', height: '30vp' })
        .onClick(() => {
          router.back({
            url: 'pages/ArkUI/ArkUI_index',
            params: { result: 'None' }
          })
        })

        Text(this.name)
          .fontColor(Color.White)
          .fontSize('18fp')
          .margin({ left: '-20vp' })
        Text('hello')
          .fontColor(Color.White)
          .visibility(Visibility.Hidden)
      }
      .backgroundColor(Color.Black)
      .height('10%')
      .width('100%')
      .justifyContent(FlexAlign.SpaceBetween)

      Column() {
        Text(this.errInfo).fontSize(10).fontColor(Color.Black)
        Image(this.srcArray[this.index])
          .width(50)
          .height(50)
          .borderWidth(4)
          .syncLoad(false)
          .onError((e) => {
            console.log("AceErrorInfo " + e?.message + "+" + JSON.stringify(e?.downloadInfo))
            console.log("AceErrorInfo " + JSON.stringify(e?.downloadInfo))
            this.errInfo = JSON.stringify(e?.downloadInfo)
            console.log("AceErrorInfo cacheDownload " + JSON.stringify(cacheDownload.getDownloadInfo(this.srcArray[this.index])))
          })

          Button('确认')
          .margin(10)
          .width('30%')
          .height('6%')
          .onClick(() => {
            this.Vue = true;
          })
      }
      .justifyContent(FlexAlign.Center)
      .height('80%')
      .width('100%')
      .backgroundColor(Color.White)

      Row() {
        this.PassBtn($r('app.string.btn_fullscreen'), true);
        Button() {
          Image($r('app.media.ic_public_help'))
            .width('20vp')
            .height('20vp')
        }
        .margin({ bottom: '20vp' })
        .width('30%')
        .height('30vp')
        .backgroundColor(Color.Grey)
        .onClick(() => {
          AlertDialog.show(
            {
              title: '操作提示',
              message: this.StepTips,
              confirm: {
                value: 'OK',
                action: () => {
                }
              }
            }
          )
        })

        this.FailBtn($r('app.string.btn_fullscreen'), true);
      }
      .height('10%')
      .width('100%')
      .justifyContent(FlexAlign.SpaceEvenly)
      .backgroundColor(Color.Black)
    }
    .width('100%')
    .height('100%')
    .backgroundColor('#F1F3F5')
  }
}

